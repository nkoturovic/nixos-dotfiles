alias ls='ls --color=auto'
alias rm='echo "rm is disabled, use trash/trash-put/rmt for safe rm or remove (/bin/rm) for removing file."'
alias remove='/bin/rm -irv'
alias rmt=trash-put
alias vi=nvim
alias vim=nvim
alias la='ls -la'
alias ll='ls -l'
set -o vi
cdc () {
    cd $(ec)
}

# Alacritty theme switcher
if [ "$ALACRITTY" = "true" ]
then
  theme() {
    ln -sf $HOME/.config/alacritty/themes/$1.toml $HOME/.config/alacritty/active-theme.toml
  }
  local ALACRITTY_THEME=$(defaults read -g AppleInterfaceStyle 2>/dev/null || echo "Light")
  if [ "$ALACRITTY_THEME" = "Dark" ]
  then
    theme "catppuccin-dark"
  else
    theme "gh-light-hc"
  fi
fi
